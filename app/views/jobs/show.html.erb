
<html>
  <head>
    <style>
      .container 
      {
        max-width: 1000px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border: 1px solid #ccc;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
    </style>
    <body>
      <div class="container">
        <p><strong>Title : </strong><%= @job.job_title%></p>
        <p><strong>Description : </strong><%= @job.description %></p>
        <p><strong>Location : </strong><%= @job.location %></p>
        <p><strong>Salary : </strong><%= @job.salary %></p>
      
      <% if @current_user.type == "JobRecruiter" %> 
        <%=link_to 'Update',  edit_job_path(@job)%> &nbsp;
        <%= link_to 'Delete', job_path(@job),data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %> &nbsp;
        <%= link_to 'View Application', job_job_recruiters_path(@job) %> &nbsp;
        <% else %>
        <%= link_to "Apply",new_job_user_application_path(@job) %> &nbsp;
      <% end %>
      <%= link_to 'Back', root_path %>
      </div>
    </body>
  </head>
</html>